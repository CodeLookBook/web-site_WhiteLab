{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",

    "allowJs": true,
    "jsx": "preserve",

    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],

    "experimentalDecorators": true
  },
  "include": [
    "./resources/**/*"
  ]
}

